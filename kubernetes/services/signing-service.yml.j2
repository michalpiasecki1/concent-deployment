apiVersion: extensions/v1beta1
kind:       Deployment
metadata:
  name: middleman
spec:
  replicas:             1
  revisionHistoryLimit: 1
  template:
    metadata:
      labels:
        run: middleman
    spec:
      containers:
        - name:             concent-api
          image:            {{ docker_registry }}/{{image_prefix }}signing-service:{{ image_version }}
          imagePullPolicy:  Always
          command:          ["{{ cluster_address }}", "--concent-cluster-port", "9055"]#,"--sentry-dsn-from-env"]
          ports:
            - containerPort: 9055
              name: external-port
          env:
            - name: SENTRY_DSN
              valueFrom:
                secretKeyRef:
                  name: sentry-data-source
                  key:  sentry_data_source_name
          resources:
            requests:
              memory: "0.3Gi"
              cpu:    "50m"
            limits:
              memory: "0.6Gi"
              cpu:    "500m"
          volumeMounts:
            - name:      signing-service-secrets
              mountPath: /srv/http/.ethereum/
      volumes:
        - name: signing-service-secrets
          secret:
            secretName: signing-service-secrets
        - name: sentry-data-source
          secret:
            secretName:  sentry-data-source
            defaultMode: 0600
